<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/main_seanchview"
    android:padding="20dp">
    <LinearLayout
        android:id="@+id/search_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <com.example.searchview.EditText_Clear
            android:id="@+id/et_search2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/shape_background"
            android:drawableStart="@drawable/search"
            android:drawableEnd="@drawable/clear"
            android:drawablePadding="8dp"
            android:textColor="#433f3f"
            android:textColorHint="#c7c4c4"
            android:hint="请输入您要访问的网址"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/search_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="#318be6"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_block">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.searchview.SearchListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.searchview.SearchListView>
            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:visibility="invisible"
                android:text="清除搜索历史" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/bottom_hint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/colorBackground"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/urlhead"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="www."
            android:gravity="center"
            android:textColor="@color/colorDefault"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/urlhead2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=".com"
            android:gravity="center"
            android:textColor="@color/colorDefault"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/urlhead3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="https://"
            android:gravity="center"
            android:textColor="@color/colorDefault"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/usual"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="最常存取"
            android:gravity="center"
            android:textColor="@color/colorDefault"
            android:layout_weight="1"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/history_pop_up"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_above="@id/bottom_hint"
            android:background="@color/colorPage"
            android:visibility="gone">
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
        </LinearLayout>
</RelativeLayout>
</LinearLayout>